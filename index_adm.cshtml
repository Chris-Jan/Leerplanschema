                    <td><input type="text" name="AddVerTra" placeholder="Versneld traject..." value="" /></td>
                </tr>
                <tr>
                    <th scope="col">Speciaal traject</th>
                    <td> @studieSpeTra</td>
                    <td><input type="text" name="AddSpeTra" placeholder="Speciaal traject..." value="" /></td>
                </tr>
                <tr>
                    <th scope="col">Vestigings plaatsen</th>
                    <td> @studieVesPla</td>
                    <td><input type="text" name="AddVesPla" placeholder="Vestigings..." value="" /></td>
                </tr>
                <tr> <td> <input type="submit" name="addOverzicht" value="Toevoegen" onclick="load()">show lijst</td></tr>

            </thead>

        </table>
        <button type="button" onclick="load()">change content </button>
        @*<button name="addOverzicht" value="Toevoegen">Toevoegen</button>*@
    </form>
    <script>
        function load() {
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    // hier haalt de form
                    document.getElementById("demo").innerHTML = this.responseText;
                }
            };
            // hier wil ik de Load pagina ophalen. zit in het zelfde mapje "Pages"
            xhttp.open("GET", "Load.cshtml", true);
            xhttp.send();
        }
    </script>


